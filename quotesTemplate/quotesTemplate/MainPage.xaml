<Page
    x:Class="quotesTemplate.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:quotesTemplate"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <!-- Edit the background of the app in the line bellow-->
    <Grid Background= "Black">
        <!--The following line creates the textbox on the left side of the image-->
        <TextBlock Name="TitleBox" Foreground ="White" FontSize="100" HorizontalAlignment="Left" FontStyle="Italic" TextAlignment="Center"
                       Height="631" Margin="10,54,0,0" TextWrapping="Wrap" Text="Tap to Begin" Tapped="Button_Tapped_Spin" VerticalAlignment="Top" Width="826" FontFamily="Segoe UI Light"/>
        <!--The line bellow displays the image on the right side of the image-->
        <Image x:Name="imageToDisplay" Width="575" Height="721" HorizontalAlignment="Center" VerticalAlignment="Center" 
        	Source="Assets/idea_light_bulb.png" Tapped="Button_Tapped_Spin" Margin="791,19,0,28">
        <!-- "Source" points to the location of the image.  Prior to compiling, the image must be added in the solution explorer
            "Tapped" is the callback.  When a user touches the image, the function "Button_tapped_spin" will trigger-->
        </Image>

    </Grid>
</Page>
